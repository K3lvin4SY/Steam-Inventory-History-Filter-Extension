{
  "name": "Steam Invetory History Filter",
  "version": "1.0.0",
  "description": "A simple extension that lets you filter through the inventory history page.",
  "manifest_version": 3,
  "author": "Kelvin Brahe",
  "action":{
      "default_title": "Steam Invetory History Filter",
      "default_icon": "icon.png",
      "default_popup": "/js/popup.html"
  },
  "web_accessible_resources": [
    { 
      "resources": [
        "/components/filterWindow.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "backgrund": {
    "service-worker": ["/js/backgrund.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://steamcommunity.com/id/*/inventoryhistory/*"],
      "js": [
        "/js/background/prototype.js",
        "/js/background/jQuery.min.js",
        "/js/background/globalsV.js",
        "/js/dialog.js",
        "content.js",
        "load.js",
        "/js/contentLoader.js",
        "/js/buttonLinker.js"
      ],
      "css": [
        "./css/filterStyle.css",
        "./css/filterOptionsDialog.css"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "script-src": "self",
    "object-src": "self"
  },
  "parmissions": [
    "cookies",
    "activeTab",
    "storage"
  ]
} 